<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linea_canal"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_weight="1.00"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_nombre_canal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="TextView"
                android:textColor="@color/letras_canales"
                android:textSize="40sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv2_nombre_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="No disponible"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No disponible"
        android:id="@+id/tv2_desc_evento"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:onClick="abrirEvento"
        android:text="Ver evento"
        android:background="#ffff0068"
        android:textColor="#fff6fff4"
        android:textSize="20dp" />

</LinearLayout>